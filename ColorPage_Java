package ec327.project.fortuneteller;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.Menu;
import android.view.View;

public class ColorPage extends Activity {

  @Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_color_page);
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.main, menu);
		return true;
	}
	
	public void flash3(View view) {
		//respond to button by flashing 3 images
		Intent intent = new Intent(this, FlashOdd.class);
		int count = 1; //Indicates the first change
		int max = 3; //How many flashes will occur
		int choice = 0; //Indicates that the first fortune teller "choice" has been made
		intent.putExtra("int_count", count);
		intent.putExtra("int_max", max);
		intent.putExtra("int_choice", choice);
		startActivity(intent);
	}
	public void flash4(View view) {
		//respond to button by flashing 4 images
		Intent intent = new Intent(this, FlashOdd.class);
		int count = 1; //Indicates the first change
		int max = 4; //How many flashes will occur
		int choice = 0; //Indicates that the first fortune teller "choice" has been made
		intent.putExtra("int_count", count);
		intent.putExtra("int_max", max);
		intent.putExtra("int_choice", choice);
		startActivity(intent);
	}
	public void flash5(View view) {
		//respond to button by flashing 5 images
		Intent intent = new Intent(this, FlashOdd.class);
		int count = 1; //Indicates the first change
		int max = 5; //How many flashes will occur
		int choice = 0; //Indicates that the first fortune teller "choice" has been made
		intent.putExtra("int_count", count);
		intent.putExtra("int_max", max);
		intent.putExtra("int_choice", choice);
		startActivity(intent);
	}
	public void flash6(View view) {
		//respond to button by flashing 6 images
		Intent intent = new Intent(this, FlashOdd.class);
		int count = 1; //Indicates the first change
		int max = 6; //How many flashes will occur
		int choice = 0; //Indicates that the first fortune teller "choice" has been made
		intent.putExtra("int_count", count);
		intent.putExtra("int_max", max);
		intent.putExtra("int_choice", choice);
		startActivity(intent);
	}

}
